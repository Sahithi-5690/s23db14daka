extends layout
 
block content
  h1= title
  - let des = `dispatch(\"/drinks/create\")`
  button.btn(  class="btn-primary ml-1", onclick= des) Create
  -
    let items  = results
  div(class= "container-fluid")
    div(class = "col m-1")
      each item,index in items
        - let destination2 = `dispatch(\"/drinks/delete?id=${item._id}\")`
        - let destination1 = `dispatch(\"/drinks/detail?id=${item._id}\")`
        - let destination = `dispatch(\"/drinks/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.drinks_brand}(#{item.drinks_quantity}) is #{item.drinks_cost}
      
        
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-danger ml-1", onclick= destination1) Details
        button.btn( class="btn-secondary ml-1", onclick= destination2) Delete
       
  script.
    function dispatch(path){
      window.location.href=path
    }