extends layout
block content
    h1= title
 
    - let drinksid = toShow._id
    - let drinks_brand = toShow.drinks_brand
    - let drinks_quantity = toShow.drinks_quantity
    - let drinks_cost = toShow.drinks_cost
    div
        div.row
            div(class='drinksAttr mr-3') Drinks Id is: #{drinksid}
            br
        div.row
            div(class='drinksAttr mr-3') Drinks Brand is: #{drinks_brand}
            br
        div.row
            div(class='drinksAttr mr-3') Drinks Quantity is: #{drinks_quantity}
            br
        div.row
            div(class='drinksAttr mr-3') Drinks Cost is: #{drinks_cost}